<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mOpen_desc" />

    <LinearLayout
        android:id="@+id/ctabs_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallPadding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/mOpen_ctabsSetting" />

        <Spinner
            android:id="@+id/ctabs_pref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/closeopen_pref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mOpen_closeopenSetting" />

    <CheckBox
        android:id="@+id/closeshare_pref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mOpen_closeshareSetting" />

</LinearLayout>